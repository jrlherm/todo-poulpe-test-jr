<div class="container">
  <div class="col-12 col-md-8 offset-md-2 text-center">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">
          <%= @task.title %>
        </h5>
        <p class="card-content">
          <%= @task.description %>
        </p>
        <% if @task.deadline? %>
          <p><%= @task.deadline %></p>
        <% else %>
          <p>No deadline</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
